//Write a macro that obtains the largest of 3 numbers

#include <iostream>

// Macro to obtain the largest of three numbers
#define MAX3(a, b, c) ((a > b) ? ((a > c) ? a : c) : ((b > c) ? b : c))

int main() {
    int num1 = 10, num2 = 20, num3 = 15;
    
    int largest = MAX3(num1, num2, num3);

    std::cout << "The largest of " << num1 << ", " << num2 << ", and " << num3 << " is: " << largest << std::endl;

    return 0;
}
